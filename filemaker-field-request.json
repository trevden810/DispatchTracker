  "schedule_hygiene_rules": [
    {
      "rule": "arrival_without_completion",
      "description": "Flag jobs with time_arival but incomplete status",
      "logic": "time_arival != null AND job_status NOT IN ('Complete', 'Done', 'Re-scheduled', 'Attempted', 'Canceled')",
      "alert_level": "warning"
    },
    {
      "rule": "past_due_active",
      "description": "Flag active jobs past due date",
      "logic": "job_status = 'active' AND due_date < current_timestamp",
      "alert_level": "critical"
    },
    {
      "rule": "completion_status_mismatch",
      "description": "Flag completed jobs with outdated status",
      "logic": "time_complete != null AND job_status = 'active'",
      "alert_level": "error"
    }
